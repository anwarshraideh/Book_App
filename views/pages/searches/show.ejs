<!DOCTYPE html>
<html lang="en">

    <%- include('../../layout/head.ejs') %>

<body>

    <%- include('../../layout/header.ejs') %>
  

    <main>
    <h1 class="Ftitle">Search Results</h1>

    <section id='books'>
    <% booksData.forEach(element=>{%>
        <div class="bookDiv">
        <img src="<%= element.img%>" alt="">

        <h1 class="tit">
            <%= element.title%>
        </h1>

        <h3 class="Author">
            <%= element.author%>
        </h3>

        <p>
            <%= element.description%>
        </p>
     
        <form action="/books" method="POST">
            <input type="hidden" name="title" value="<%= booksData.title %>" reqiuerd />
            <input type="hidden" name="author" value="<%= booksData.author %>" reqiuerd />
            <input type="hidden" name="isbn" value="<%= booksData.isbn %>" reqiuerd />
            <input type="hidden" name="img" value="<%= booksData.img %>" reqiuerd />
            <input type="hidden" name="description" value="<%= booksData.description %>" reqiuerd />
            
            <button type="submit">Add to the Shelf</button>
          </form>
     </div>
    <%});%>

    
</section>
</main>
    
</body>
</html>